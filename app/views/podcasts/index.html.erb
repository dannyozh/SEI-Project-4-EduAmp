<p id="notice"><%= notice %></p>
<h1>Podcast Index Page</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @podcasts.each do |podcast| %>
      <tr>
        <ul>
          <li>Name: <%= podcast.name %></li>
          <li>Duration: <%= podcast.duration %></li>
          <li>Description: <%= podcast.description %></li>
          <li>Date: <%= podcast.created_at %></li>
        </ul>
        <audio controls>
          <source src=<%= podcast.url%>>
        </audio>
        <ngb-rating [(rate)]="currentRate"></ngb-rating>
        <hr>
        <pre>Rate: <b>{{currentRate}}</b></pre>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Podcast', new_podcast_path %>
