<div class="container d-flex my-5">
  <div class="float-left my-5 col-md-7">
    <img width="80%" src="<%= image_url 'listening.jpg' %>" />
  </div>
  <div class="form-group emp-form profile-form purple my-auto rounded col-md-5 float-right">
    <div class="inner-form col-md-9 mx-auto my-5">
      <h3 class="text-left purple-text mx-auto sign-up-title">Podcasts are hot in the oven! In the meantime, complete your profile!</h3>
      <br/>
      <div class="d-flex justify-content-center">
        <%= form_with scope: :student_profiles, url: student_profiles_path, local: true do |form| %>
          <div class="field">
            <%= form.text_field :name, class: "input", placeholder: "Your name" %>
          </div>
          <div class="field">
            <%= form.text_field :age_group, class: "input", placeholder: "Your age" %>
          </div>
          <br/>
          <div class="actions text-center">
            <%= form.submit %>
          </div>
        </div>
      <% end %>
      <%#=<%= render "employers/shared/links" %>
    </div>
    <%#=	<%= link_to 'Back', employers_profiles_path %>
  </div>
</div>
